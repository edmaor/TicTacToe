<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/theme_bg"
    android:orientation="vertical"
    tools:context=".TicTacToe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:background="@drawable/rounded_nb"
        android:backgroundTint="@color/theme_card"
        android:padding="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/theme_blue"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_nb"
        android:backgroundTint="@color/theme_card"
        android:columnCount="3"
        android:padding="12dp"
        android:rowCount="3">
        <ImageView
            android:id="@+id/ttt_00"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_01"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_02"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_10"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_11"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_12"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_20"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_21"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/ttt_22"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="12dp"
            android:background="@drawable/tictactoe"
            android:contentDescription="@string/app_name" />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/rounded_nb"
        android:backgroundTint="@color/theme_card"
        android:padding="12dp">
        <TextView
            android:id="@+id/ttt_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/theme_blue"/>
    </LinearLayout>

</LinearLayout>